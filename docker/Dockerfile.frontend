FROM node:20-alpine

WORKDIR /app

# Copiar archivos de dependencias
COPY frontend/package*.json ./

# Instalar dependencias
RUN npm install

# Copiar código fuente
COPY frontend/ ./

# Las variables de entorno VITE_ se pasan en runtime en modo dev
# En producción, se deberían pasar en build time: ARG VITE_API_URL=...

# Exponer puerto
EXPOSE 3000

# Comando por defecto
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]

